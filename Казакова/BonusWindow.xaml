<Window x:Class="Казакова.BonusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Казакова"
        mc:Ignorable="d"
        Title="BonusWindow" Height="150" Width="200">
    <StackPanel>
        <TextBlock Text="Сумма для премии" Margin="5"/>
        <TextBox x:Name="TB" Margin="5"/>
        <Button x:Name="OkBtn" Content="Ok" Click="OkBtn_Click" Margin="5"/>
    </StackPanel>
</Window>
